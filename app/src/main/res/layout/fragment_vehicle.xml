<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_color"
    android:orientation="horizontal"
    tools:visibility="visible">

    <!-- SPEED -->
    <LinearLayout
        android:id="@+id/speedometer"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_marginStart="1000dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="1000dp"
        android:layout_marginBottom="500dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds">

        <TextView
            android:id="@+id/speedValue"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:fontFamily="@font/goldman_bold"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="150sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck,VisualLintBounds" />

        <TextView
            android:id="@+id/speedType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/goldman"
            android:gravity="center|top"
            android:text="kmh"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText,VisualLintBounds" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
